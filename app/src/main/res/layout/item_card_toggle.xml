<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:id="@+id/rl_card_container"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="@color/card_background"
        android:padding="16dp">

        <!-- Card Type Badge -->
        <TextView
            android:id="@+id/tv_card_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/bg_card_type_badge"
            android:paddingHorizontal="12dp"
            android:paddingVertical="4dp"
            android:text="ATM"
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="ATM" />

        <!-- Cardholder Name -->
        <TextView
            android:id="@+id/tv_cardholder_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:text="SCROOGE MCDUCK"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="SCROOGE MCDUCK" />

        <!-- Card Number -->
        <TextView
            android:id="@+id/tv_card_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_cardholder_name"
            android:layout_alignParentStart="true"
            android:layout_marginTop="8dp"
            android:text="•••• •••• •••• 2345"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            tools:text="•••• •••• •••• 2345" />

        <!-- Toggle Switch -->
        <androidx.appcompat.widget.SwitchCompat
            android:id="@+id/switch_card_toggle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:checked="true"
            android:theme="@style/CardToggleSwitchTheme" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>